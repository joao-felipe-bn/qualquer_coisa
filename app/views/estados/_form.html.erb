<%= form_with(model: estado) do |form| %>

  <% if estado.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(estado.errors.count, "error") %> ao salvar estado</h2>
  
    <ul>
      <% estado.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :sigla, style: "display: block" %>
    <%= form.text_field :sigla %>
  </div>

  </br>

  <div>
    <%= form.submit 'Salvar', class: 'btn btn-success' %>
  </div>
<% end %>
